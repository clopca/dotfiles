# Global Git Configuration
# This is a template - update your name, email, and signing key

[user]
	name = YOUR_NAME
	email = YOUR_EMAIL
	# signingkey = YOUR_SSH_SIGNING_KEY

[init]
	defaultBranch = main

[core]
	editor = code --wait
	pager = 
	autocrlf = input
	excludesfile = ~/.gitignore_global

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = current

[fetch]
	prune = true

[diff]
	colorMoved = zebra

[merge]
	conflictstyle = diff3

[rebase]
	autoStash = true

# Commit signing with SSH (via 1Password)
[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = true

# Git LFS
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# Conditional includes for different contexts
# Example: Use different email for personal projects
# [includeIf "gitdir:~/dev/personal/"]
#   path = ~/.gitconfig.personal
# 
# [includeIf "gitdir:~/dev/work/"]
#   path = ~/.gitconfig.work

# Aliases
[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	lg = log --oneline --decorate --graph --all
	contributors = shortlog --summary --numbered
