# =============================================================================
# GIT CONFIGURATION
# =============================================================================
# This is a template - update user.name, user.email, and user.signingkey
# for each machine

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	name = Cristobal
	email = cristobal.callejon@gmail.com
	# SSH signing key from 1Password (update with your key)
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGg4EE0tDOJmkHQi6wWQZqm4wAgzh4sqyqQBnNZBinLv

[gpg]
	format = ssh

[gpg "ssh"]
	# 1Password SSH signing agent
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = true

[core]
	# Disable pager for cleaner output in scripts
	pager = cat
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	autoSetupRemote = true

[alias]
	# Common shortcuts
	st = status
	co = checkout
	br = branch
	ci = commit
	lg = log --oneline --graph --decorate
	last = log -1 HEAD
	unstage = reset HEAD --

# =============================================================================
# CONDITIONAL INCLUDES
# =============================================================================
# Personal projects (GitHub)
[includeIf "gitdir:~/dev/github/**"]
	path = ~/dev/github/.gitconfig

